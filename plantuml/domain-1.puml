@startuml

left to right direction

scale max 1024 width
scale max 800 height

skinparam defaultFontName Monospaced
skinparam shadowing false

actor Rider
actor Driver

rectangle Order {
  Rider --> (Place order)
  Rider --> (Edit order price)
  Rider --> (Cancel order)
  (Accept order) <-- Driver
  (Complete order) <-- Driver
}

@enduml